<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:contentPadding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:transitionName="productLogoTransition"
            android:id="@+id/productItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="2dp"
                    android:layout_weight=".8"
                    android:id="@+id/productItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto 1"
                    android:textSize="@dimen/big" />

                <TextView
                    android:gravity="end"
                    android:layout_weight=".2"
                    android:id="@+id/productItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$19.99"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/big" />
            </LinearLayout>



            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/normal"
                android:id="@+id/productItemDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion muuy lashrfasdgf iashfia hgfdas" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>